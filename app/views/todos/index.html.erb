<%- content_for :css_files do %>
  <%= stylesheet_link_tag  'todos', media: 'all', 'data-turbolinks-track' => true %>

<% end %>

<%- content_for :js_files do %>
  <%= javascript_include_tag 'http://backbonejs.org/test/vendor/jquery.js' %>
  <%= javascript_include_tag 'http://backbonejs.org/test/vendor/underscore.js' %>
  <%= javascript_include_tag 'http://backbonejs.org/backbone.js' %>
  <%= javascript_include_tag 'http://backbonejs.org/examples/backbone.localStorage.js' %>
  <%= javascript_include_tag 'todos', 'data-turbolinks-track' => true %>
<% end %>

<%- content_for :content do %>
  <div id="todoapp">
    <header>
      <h1>Todos</h1>
      <input id="new-todo" type="text" placeholder="What needs to be done?">
    </header>

    <section id="main" style="display: none;">
      <input id="toggle-all" type="checkbox">
      <label for="toggle-all">Mark all as complete</label>
      <ul id="todo-list"></ul>
    </section>

    <footer style="display: none;">
      <a id="clear-completed">Clear completed</a>
      <div id="todo-count"></div>
    </footer>
  </div>

  <!-- Templates -->
  <%== render partial: "todos/template" %>
<% end %>